<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Titulo" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle, "Subtitulo" %><br>
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :content, "Contenido" %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :user_id, "Autor" %><br>
    <%= f.select :user_id, user_options(@users) %>
  </div>
  <div class="field">
    <%= f.label :categories, "Categorias" %><br>
    <% for category in @categories do %>
      <%= check_box_tag "post[category_ids][]", category.id, @post.categories.member?(category) %>
      <%= category.name %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
